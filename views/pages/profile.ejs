<%- include ('../partials/header') %>
    <section class="profile-settings">
        <div class="settings-container">
            <!-- Settings Navigation -->
            <nav class="settings-nav">
                <div class="user-profile">
                    <div class="avatar-container">
                        <img src="<%= user.avatar || '/images/default-avatar.jpeg' %>" alt="Profile Avatar"
                            class="profile-avatar">
                        <button class="avatar-upload">
                            <i class="fa-solid fa-camera"></i>
                        </button>
                    </div>

                    <h3 class="user-name">
                        <%= user.name %>
                    </h3>
                    <p class="user-email">
                        <%= user.email %>
                    </p>



                </div>

                <ul class="settings-menu">
                    <li class="menu-item active" data-section="profile">
                        <i class="fa-regular fa-user"></i>
                        Profile Information
                    </li>
                    <li class="menu-item" data-section="security">
                        <i class="fa-regular fa-lock"></i>
                        Security
                    </li>
                    <li class="menu-item" data-section="preferences">
                        <i class="fa-regular fa-gear"></i>
                        Preferences
                    </li>
                </ul>
            </nav>

            <!-- Settings Content -->
            <div class="settings-content">
                <!-- Profile Information Section -->
                <div class="content-section active" id="profile">
                    <h2 class="section-title">Personal Details</h2>
                    <form class="profile-form">
                        <div class="form-grid">
                            <div class="input-group">
                                <label>Full Name</label>
                                <input type="text" value="<%= user.name %>" required>
                            </div>
                            <div class="input-group">
                                <label>Email Address</label>
                                <input type="email" value="<%= user.email %>" required>
                            </div>
                            <div class="input-group">
                                <label>Phone Number</label>
                                <input type="tel" value="<%= user.phone %>">
                            </div>
                            <div class="input-group">
                                <label>Date of Birth</label>
                                <input type="date" value="<%= user.dob %>">
                            </div>
                        </div>
                        <button type="submit" class="save-changes">
                            <i class="fa-regular fa-floppy-disk"></i>
                            Save Changes
                        </button>
                    </form>
                </div>

                <!-- Security Section -->
                <div class="content-section" id="security">
                    <h2 class="section-title">Account Security</h2>
                    <form class="security-form">
                        <div class="input-group">
                            <label>Current Password</label>
                            <input type="password" required>
                        </div>
                        <div class="input-group">
                            <label>New Password</label>
                            <input type="password" required>
                        </div>
                        <div class="input-group">
                            <label>Confirm New Password</label>
                            <input type="password" required>
                        </div>
                        <div class="security-options">
                            <label class="checkbox-option">
                                <input type="checkbox" <%=user.twoFactor ? 'checked' : '' %>>
                                Enable Two-Factor Authentication
                            </label>
                        </div>
                        <button type="submit" class="save-changes">
                            Update Security Settings
                        </button>
                    </form>
                </div>

                <!-- Preferences Section -->
                <div class="content-section" id="preferences">
                    <h2 class="section-title">Preferences</h2>
                    <div class="preference-options">
                        <div class="preference-item">
                            <h4>Theme Preferences</h4>
                            <div class="theme-switch">
                                <button class="theme-option active" data-theme="light">
                                    <i class="fa-regular fa-sun"></i>
                                    Light
                                </button>
                                <button class="theme-option" data-theme="dark">
                                    <i class="fa-regular fa-moon"></i>
                                    Dark
                                </button>
                            </div>
                        </div>

                        <div class="preference-item">
                            <h4>Notification Preferences</h4>
                            <div class="notification-options">
                                <label class="checkbox-option">
                                    <input type="checkbox" checked>
                                    Email Notifications
                                </label>
                                <label class="checkbox-option">
                                    <input type="checkbox">
                                    SMS Notifications
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <style>
        /* Profile Settings Styles */
        .profile-settings {
            padding: 4rem 5%;
            background-color: var(--ivory-white);
            min-height: 100vh;
        }

        .settings-container {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 3rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .settings-nav {
            background: var(--white);
            padding: 2rem;
            border: 1px solid var(--stone-gray);
            border-radius: 4px;
            position: sticky;
            top: 120px;
            height: fit-content;
        }

        .avatar-container {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto 1.5rem;
        }

        .profile-avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--gold-foil);
        }

        .avatar-upload {
            position: absolute;
            bottom: 0;
            right: 0;
            background: var(--navy-blue);
            color: var(--gold-foil);
            border: none;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .user-name {
            font-family: 'Playfair Display', serif;
            color: var(--navy-blue);
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .user-email {
            color: var(--pewter);
            text-align: center;
            font-size: 0.9rem;
        }

        .settings-menu {
            margin-top: 2rem;
            list-style: none;
        }

        .menu-item {
            padding: 1rem;
            margin: 0.5rem 0;
            color: var(--pewter);
            cursor: pointer;
            border-radius: 4px;
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: all 0.3s ease;
        }

        .menu-item.active,
        .menu-item:hover {
            background: var(--warm-beige);
            color: var(--navy-blue);
        }

        .settings-content {
            background: var(--white);
            padding: 2rem;
            border: 1px solid var(--stone-gray);
            border-radius: 4px;
        }

        .content-section {
            display: none;
        }

        .content-section.active {
            display: block;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            color: var(--navy-blue);
            font-size: 1.8rem;
            margin-bottom: 2rem;
            border-bottom: 2px solid var(--gold-foil);
            padding-bottom: 0.5rem;
        }

        .form-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .input-group label {
            display: block;
            color: var(--pewter);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .input-group input {
            width: 100%;
            padding: 0.8rem;
            border: 1px solid var(--stone-gray);
            background: var(--white);
            transition: all 0.3s ease;
        }

        .input-group input:focus {
            border-color: var(--antique-brass);
            outline: none;
            box-shadow: 0 0 0 2px rgba(182, 141, 76, 0.1);
        }

        .save-changes {
            background: var(--navy-blue);
            color: var(--gold-foil);
            border: 1px solid var(--gold-foil);
            padding: 1rem 2rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .save-changes:hover {
            background: var(--hunter-green);
        }

        .theme-switch {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .theme-option {
            padding: 1rem 2rem;
            border: 1px solid var(--stone-gray);
            background: var(--white);
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.3s ease;
        }

        .theme-option.active {
            border-color: var(--antique-brass);
            background: var(--warm-beige);
        }

        .checkbox-option {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin: 1rem 0;
            color: var(--pewter);
        }

        @media (max-width: 768px) {
            .settings-container {
                grid-template-columns: 1fr;
            }

            .settings-nav {
                position: static;
                margin-bottom: 2rem;
            }

            .form-grid {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 480px) {
            .theme-switch {
                flex-direction: column;
            }

            .theme-option {
                width: 100%;
                justify-content: center;
            }
        }
    </style>

    <script>
        // Add tab switching functionality
        document.querySelectorAll('.menu-item').forEach(item => {
            item.addEventListener('click', () => {
                // Remove active class from all items
                document.querySelectorAll('.menu-item').forEach(i => i.classList.remove('active'));
                document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));

                // Add active class to clicked item
                item.classList.add('active');
                document.getElementById(item.dataset.section).classList.add('active');
            });
        });

        // Add avatar upload functionality
        document.querySelector('.avatar-upload').addEventListener('click', function (e) {
            e.preventDefault();
            const input = document.createElement('input');
            input.type = 'file';
            input.accept = 'image/*';
            input.onchange = function () {
                const file = this.files[0];
                const reader = new FileReader();
                reader.onload = function (e) {
                    document.querySelector('.profile-avatar').src = e.target.result;
                }
                reader.readAsDataURL(file);
            };
            input.click();
        });
    </script>

    <%- include ('../partials/footer') %>