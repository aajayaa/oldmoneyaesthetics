    <script>
        // Toggle child categories
        document.querySelectorAll('.toggle-children').forEach(button => {
            button.addEventListener('click', function() {
                const targetId = this.getAttribute('data-target');
                const childItems = document.getElementById(targetId);
                
                if (childItems.style.display === 'none') {
                    childItems.style.display = 'block';
                    this.classList.remove('collapsed');
                } else {
                    childItems.style.display = 'none';
                    this.classList.add('collapsed');
                }
            });
        });

        // Simple filter functionality
        document.getElementById('search').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const items = document.querySelectorAll('.tree-item');
            
            items.forEach(item => {
                const categoryName = item.querySelector('.category-name').textContent.toLowerCase();
                
                if (categoryName.includes(searchTerm)) {
                    item.style.display = 'flex';
                    // Show parent if child matches
                    let parent = item.closest('.child-items');
                    while (parent) {
                        parent.style.display = 'block';
                        const toggle = document.querySelector(`.toggle-children[data-target="${parent.id}"]`);
                        if (toggle) toggle.classList.remove('collapsed');
                        parent = parent.parentElement.closest('.child-items');
                    }
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // Status filter
        document.getElementById('status').addEventListener('change', function() {
            const status = this.value;
            const items = document.querySelectorAll('.tree-item');
            
            if (!status) {
                items.forEach(item => item.style.display = 'flex');
                return;
            }
            
            items.forEach(item => {
                const statusBadge = item.querySelector('.status-badge');
                const itemStatus = statusBadge.classList.contains('status-active') ? 'active' : 'hidden';
                
                if (itemStatus === status) {
                    item.style.display = 'flex';
                    // Show parent if child matches
                    let parent = item.closest('.child-items');
                    while (parent) {
                        parent.style.display = 'block';
                        const toggle = document.querySelector(`.toggle-children[data-target="${parent.id}"]`);
                        if (toggle) toggle.classList.remove('collapsed');
                        parent = parent.parentElement.closest('.child-items');
                    }
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // Clear filters
        document.querySelector('.filter-actions button:nth-child(2)').addEventListener('click', function() {
            document.getElementById('search').value = '';
            document.getElementById('status').value = '';
            
            const items = document.querySelectorAll('.tree-item');
            items.forEach(item => item.style.display = 'flex');
            
            // Collapse all child items except first
            document.querySelectorAll('.child-items').forEach((child, index) => {
                child.style.display = index === 0 ? 'block' : 'none';
            });
            
            // Update toggle buttons
            document.querySelectorAll('.toggle-children').forEach((toggle, index) => {
                if (index === 0) {
                    toggle.classList.remove('collapsed');
                } else {
                    toggle.classList.add('collapsed');
                }
            });
        });
    </script>
