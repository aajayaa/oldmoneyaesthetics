            border-radius: 4px;
        }

        .dropdown-menu a:hover {
            background: var(--ivory-white);
        }

        .pagination {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            gap: 0.5rem;
            margin-top: 2rem;
        }

        .page-numbers button {
            padding: 0.35rem 0.75rem;
            border: 1px solid var(--stone-gray);
            background: transparent;
            color: var(--pewter);
            border-radius: 4px;
            cursor: pointer;
        }

        .page-numbers button.active {
            border-color: var(--hunter-green);
            background: var(--hunter-green);
            color: white;
        }

        @media (max-width: 768px) {
            .table-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .orders-table {
                display: block;
                overflow-x: auto;
            }

            .filter-section .form-row {
                flex-direction: column;
            }
        }

        @media (max-width: 576px) {
            .orders-table-container {
                padding: 1rem;
            }

            .bulk-actions {
                flex-direction: column;
                width: 100%;
            }

            .bulk-actions select {
                width: 100%;
            }
        }
    </style>


    <script>
        // Order Page Scripts
        document.addEventListener('DOMContentLoaded', function () {
            // Dropdown functionality
            document.querySelectorAll('.dropdown').forEach(dropdown => {
                const button = dropdown.querySelector('.icon-btn');
                const menu = dropdown.querySelector('.dropdown-menu');

                button.addEventListener('click', (e) => {
                    e.stopPropagation();
                    menu.style.display = menu.style.display === 'block' ? 'none' : 'block';
                });
            });

            // Close dropdowns when clicking outside
            document.addEventListener('click', (e) => {
                document.querySelectorAll('.dropdown-menu').forEach(menu => {
                    if (!menu.parentElement.contains(e.target)) {
                        menu.style.display = 'none';
                    }
                });
            });

            // Search functionality
            const searchInput = document.querySelector('.search-input input');
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                document.querySelectorAll('.orders-table tbody tr').forEach(row => {
                    const text = row.textContent.toLowerCase();
                    row.style.display = text.includes(searchTerm) ? '' : 'none';
                });
            });

            // Date picker initialization (would need a proper date picker library)
            const dateInputs = document.querySelectorAll('input[type="date"]');
            dateInputs.forEach(input => {
                input.addEventListener('change', updateOrderFilters);
            });

            // Bulk actions
            document.querySelector('.bulk-actions button').addEventListener('click', function () {
                const selected = document.querySelectorAll('input[type="checkbox"]:checked');
                const action = document.querySelector('.bulk-actions select').value;
                // Handle bulk actions here
            });

            function updateOrderFilters() {
                // Handle filter updates here
            }
        });

        // Initialize table sorting
        document.querySelectorAll('.orders-table th').forEach(header => {
            header.addEventListener('click', function () {
                const table = this.closest('table');
                const columnIndex = this.cellIndex;
                const rows = Array.from(table.querySelectorAll('tbody tr'));
                const isAsc = this.classList.toggle('asc');

                rows.sort((a, b) => {
                    const aValue = a.cells[columnIndex].textContent;
                    const bValue = b.cells[columnIndex].textContent;
                    return isAsc ? aValue.localeCompare(bValue) : bValue.localeCompare(aValue);
                });

                table.querySelector('tbody').append(...rows);
            });
        });
    </script>

